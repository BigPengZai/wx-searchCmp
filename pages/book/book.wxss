/* pages/book/book.wxss */

.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
  background-color: gray;
}
.sub-container{
 
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;

}
.header{
  position: fixed;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  box-shadow: 0 0 3px #e3e3e3;
  z-index: 99;
}
.box{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 700rpx;
  height: 68rpx;
  background-color: #f5f5f5;
  color: #999;
  border-radius: 50rpx;
}
.box image{
  width: 14px;
  height: 14px;
  margin-right: 10px;
}

.sub-container .title{
  margin-top: 40rpx;
}


.books-container{
  width: 100%;
}