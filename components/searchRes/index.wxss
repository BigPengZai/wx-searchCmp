.categorys-container {
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  margin: 20rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.categorys-container text{
  margin: 10rpx 40rpx 10rpx 15rpx;
}
.categorys-container .description{
    /* 定义为自适应布局   */
    display: -webkit-box;       
    /* 超出部分隐藏 */
    overflow: hidden;
    /* 竖直方向的超出隐藏 */
    -webkit-box-orient: vertical;  
    /* 限制最多2行 */
    -webkit-line-clamp: 3;
}